<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://bootswatch.com/5/darkly/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <title>To-do List</title>
  </head>
  <body>
    <header>
      <nav
        class="navbar navbar-dark bg-primary justify-content-between py-2 px-4"
      >
        <a class="navbar-brand" href="/">
          {{#if isAuthenticated}}{{user.name}}'s {{/if}}
          Todo List
        </a>
        {{#if isAuthenticated}}
          <a href="/users/logout" class="btn btn-outline-light">Logout</a>
        {{else}}
          <a href="/users/login" class="btn btn-outline-light">Login</a>
        {{/if}}
      </nav>
    </header>
    <main>
      <div class="container mt-3">
        {{{body}}}
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>